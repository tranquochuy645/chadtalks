{
    "$jsonSchema": {
        "bsonType": "object",
        "required": [
            "_id",
            "username",
            "password",
            "fullname",
            "avatar",
            "rooms",
            "createdAt",
            "isOnline",
            "invitations"
        ],
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "username": {
                "bsonType": "string"
            },
            "password": {
                "bsonType": "string"
            },
            "fullname": {
                "bsonType": "string"
            },
            "avatar": {
                "bsonType": "string"
            },
            "bio": {
                "bsonType": "string"
            },
            "rooms": {
                "bsonType": "array",
                "items": {
                    "bsonType": ["objectId", "null"]
                }
            },
            "createdAt": {
                "bsonType": "date"
            },
            "isOnline": {
                "bsonType": "bool"
            },
            "invitations": {
                "bsonType": "array",
                "items": {
                    "bsonType": ["objectId", "null"]
                }
            },
            "lastUpdate": {
                "bsonType": "date"
            }
        }
    }
}
